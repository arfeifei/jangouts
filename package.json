{
  "name": "Jangouts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.5",
    "dompurify": "^2.0.8",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.4",
    "react-hook-form": "^5.1.3",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.5.4",
    "tailwindcss": "^1.2.0",
    "webrtc-adapter": "^7.5.0"
  },
  "scripts": {

    "build:css": "postcss src/styles/index.css -o src/styles.css",
    "watch:css": "postcss -w src/styles/index.css -o src/styles.css",

    "start": "run-p watch:css start:react",
    "start:react": "react-scripts start",

    "prebuild": "npm run build:css",
    "build": "react-scripts build",

    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "jsxBracketSameLine": true,
    "printWidth": 100,
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extends",
            "tailwind"
          ]
        }
      ]
    },
    "ignoreFiles": "src/assets/**"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ],
    "*.css": "stylelint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^2.7.0",
    "lint-staged": "^10.0.7",
    "mutationobserver-shim": "^0.3.3",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.2"
  }
}
